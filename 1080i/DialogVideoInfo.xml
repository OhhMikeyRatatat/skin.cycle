<?xml version="1.0" encoding="UTF-8"?>
<!-- Foundation -->
<window id="2003">
	<defaultcontrol always="true">9000</defaultcontrol>
	<allowoverlay>yes</allowoverlay>

	<controls>

		<include>GlobalOverlay</include>
		<control type="group">
			<include>Common-View-Animation</include>
			<!-- Bar -->
			<control type="image">
				<posx>-500</posx>
				<posy>464</posy>
				<width>3000</width>
				<height>152</height>
				<texture>windows/info/bar.png</texture>
			</control>
			<!-- Icon Bar -->
			<control type="list" id="9000">
				<posy>464</posy>
				<posx>860</posx>
				<width>900</width>
				<height>152</height>
				<orientation>horizontal</orientation>
				<itemlayout width="222">
					<control type="image">
						<width>192</width>
						<height>152</height>
						<texture>windows/info/inner.png</texture>
						<colordiffuse>Home-InnerRing-End</colordiffuse>
					</control>
					<control type="image">
						<posx>20</posx>
						<width>152</width>
						<height>152</height>
						<texture>$INFO[ListItem.Icon]</texture>
					</control>
					<control type="image">
						<width>192</width>
						<height>152</height>
						<texture>windows/info/outer.png</texture>
					</control>
				</itemlayout>
				<focusedlayout width="222">
					<control type="image">
						<width>192</width>
						<height>152</height>
						<texture>windows/info/inner.png</texture>
						<colordiffuse>Home-InnerRing</colordiffuse>
					</control>
					<control type="image">
						<posx>20</posx>
						<width>152</width>
						<height>152</height>
						<texture>$INFO[ListItem.Icon]</texture>
					</control>
					<control type="image">
						<width>192</width>
						<height>152</height>
						<texture>windows/info/outer.png</texture>
					</control>
				</focusedlayout>
				<content>
					<item id="1">
						<label>$LOCALIZE[41315]</label>
						<onclick>SendClick(2003,8)</onclick>
						<icon>menu/videoinfo/play.png</icon>
					</item>
					<item id="2">
						<label>$LOCALIZE[20410]</label>
						<onclick>PlayMedia($INFO[ListItem.Trailer])</onclick>
						<icon>menu/videoinfo/trailer.png</icon>
					</item>
					<item id="3">
						<onclick>SendClick(2003,3)</onclick>
						<icon>menu/videoinfo/artwork.png</icon>
					</item>
					<item id="4">
						<label>$LOCALIZE[41307]</label>
						<onclick>SendClick(2003,6)</onclick>
						<icon>menu/videoinfo/refresh.png</icon>
					</item>
				</content>
			</control>
			<!-- Poster -->
			<control type="group">
				<posx>206</posx>
				<posy>119</posy>
				<control type="image">
					<posx>219</posx>
					<posy>-50</posy>
					<include>Star-Rating</include>
				</control>
				<control type="image">
					<posx>-5</posx>
					<posy>-5</posy>
					<width>582</width>
					<height>851</height>
					<texture border="8">common/white8.png</texture>
				</control>
				<control type="image">
					<width>572</width>
					<height>841</height>
					<texture background="true">$VAR[Art-Info-Poster]</texture>
					<aspectratio>scale</aspectratio>
				</control>
			</control>
			<!-- Top Info -->
			<control type="group">
				<posx>880</posx>
				<posy>119</posy>
				<control type="label">
					<width>850</width>
					<font>Font-Info-Title</font>
					<label>$INFO[ListItem.Label]$INFO[ListItem.Year, [COLOR=Views-Text-Year](,)[/COLOR]]</label>
					<textcolor>Views-Text-Title</textcolor>
				</control>
				<control type="textbox">
					<posy>76</posy>
					<width>850</width>
					<height>200</height>
					<align>left</align>
					<font>Font-View-Plot</font>
					<label>$INFO[ListItem.Tagline,[B],[/B][CR]]$INFO[ListItem.Plot]$INFO[ListItem.Plot]$INFO[ListItem.Plot]</label>
					<textcolor>Views-Text-Plot</textcolor>
					<shadowcolor>00000000</shadowcolor>
				</control>
				<control type="label">
					<posy>262</posy>
					<width>850</width>
					<font>Font-View-Genre</font>
					<label>$INFO[ListItem.Genre]</label>
					<textcolor>Views-Text-Genre</textcolor>
				</control>
			</control>
		</control>
	</controls>

</window>