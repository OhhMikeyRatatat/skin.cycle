<?xml version="1.0" encoding="UTF-8"?>
<!-- Foundation -->
<includes>

	<include name="View_50_List">
	
		<description>List View (id=50)</description>

		<control type="list" id="50">
			<posx>330</posx>
			<posy>57</posy>
			<width>960</width>
			<height>966</height>
			<onleft>9000</onleft>
			<onright>60</onright>
			<onup>50</onup>
			<ondown>50</ondown>
			<pagecontrol>60</pagecontrol>
			<viewtype label="535">list</viewtype>
			<scrolltime>200</scrolltime>
			<animation type="Conditional" condition="ControlGroup(9000).HasFocus()">
				<effect type="fade" start="100" end="50" time="200" />
				<effect type="zoom" center="1290,540" start="100" end="90" time="200" />
			</animation>

			<itemlayout width="960" height="69">

				<control type="image">
					<width>960</width>
					<height>66</height>
					<texture border="2">other_textures/ButtonNF.png</texture>
				</control>

				<control type="label">
					<posx>30</posx>
					<width>900</width>
					<font>Medium</font>
					<label>$INFO[ListItem.Label]$INFO[ListItem.Label2, - ]</label>
				</control>

			</itemlayout>

			<focusedlayout width="960" height="69">

				<control type="image">
					<width>960</width>
					<height>66</height>
					<texture border="5">other_textures/ButtonFo.png</texture>
					<animation effect="fade" start="100" end="50" condition="!Control.HasFocus(50)">Conditional</animation>
				</control>

				<control type="label">
					<posx>30</posx>
					<width>900</width>
					<font>Medium</font>
					<label>$INFO[ListItem.Label]$INFO[ListItem.Label2, - ]</label>
				</control>

			</focusedlayout>

		</control>

	</include>

</includes>
